<h1>Listing flights</h1>

<table border="1">
  <tr bgcolor="green">
    <th>Flight id</th>
    <th>Departure</th>
    <th>Arrival</th>
    <th>Destination</th>
    <th>Baggage allowance</th>
    <th>Capacity</th>
    <th colspan="4">Operations</th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%=h flight.id %></td>
    <td><%=h flight.departure %></td>
    <td><%=h flight.arrival %></td>
    <td><%=h flight.destination %></td>
    <td><%=h flight.baggage_allowance %></td>
    <td><%=h flight.capacity %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Seats', flight_path(flight)+'/seats/' %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

