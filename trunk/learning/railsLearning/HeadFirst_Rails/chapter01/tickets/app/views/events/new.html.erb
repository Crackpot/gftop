<h1>New event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :artist %><br />
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price_from %><br />
    <%= f.text_field :price_low %>
  </p>
  <p>
    <%= f.label :to %><br />
    <%= f.text_field :price_high %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :event_data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
