<h1>Listing seats</h1>

<table border="1">
  <tr bgcolor="green">
    <th>Seat id</th>
    <th>Flight</th>
    <th>Name</th>
    <th>Baggage</th>
    <th colspan="3">Operations</th>
  </tr>

<% seats.each do |seat| %>
  <tr>
    <td><%=h seat.id %></td>
    <td><%=h seat.flight_id %></td>
    <!-- 
    -->
    <td><%=h seat.name %></td>
    <td><%=h seat.baggage %></td>
    <td><%= link_to 'Show', seat %></td>
    <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
    <td><%= link_to 'Destroy', seat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
